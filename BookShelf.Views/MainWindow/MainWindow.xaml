<Window x:Class="BookShelf.View.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"      mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShelf"
        xmlns:mainWindow="clr-namespace:BookShelf;assembly=BookShelf.ViewModels"
        xmlns:mainWindow1="clr-namespace:BookShelf.ViewModels.MainWindow;assembly=BookShelf.ViewModels"
        xmlns:converters="clr-namespace:BookShelf.Views.Converters"
        Title="{Binding Title, Mode=OneTime}"
        Left="{Binding Left, Mode=TwoWay}"
        Top="{Binding Top, Mode=TwoWay}"
        Height="{Binding Height, Mode=TwoWay}" 
        Width="{Binding Width, Mode=TwoWay}"
        WindowState="{Binding IsMaximized, Mode=TwoWay, 
            Converter={x:Static converters:BoolToWindowStateConverter.Instance}}"
        d:DataContext="{d:DesignInstance mainWindow1:MainWindowViewModel}">

    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <Button Content="Закрыть главное окно"
                Command="{Binding CloseMainWindowCommand}"
                Width="150"
                Height="21"/>
        <Button Content="О программе" Command="{Binding OpenAboutWindowCommand}"
                Width="120" Height="21"/>
    </StackPanel>
</Window>
